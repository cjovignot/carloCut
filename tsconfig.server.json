{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "rootDir": "api", // <-- adapte selon lâ€™emplacement de ton serveur
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "allowJs": false
  },
  "include": ["api/**/*.ts", "src/constants/**/*.ts"],
  "exclude": ["node_modules", "dist", "src"] // on ignore le front
}
