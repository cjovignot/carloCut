{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/server/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/server/$1" },
    { "src": "/manifest.json", "dest": "/dist/manifest.json" },
    { "src": "/favicon.ico", "dest": "/dist/favicon.ico" },
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ]
}
